                            android:layout_marginBottom="153dp"
                            android:fontFamily="@font/gotham"
                            android:text="@string/comprar"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textView3"
